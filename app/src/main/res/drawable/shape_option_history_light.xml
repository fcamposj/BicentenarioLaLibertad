<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/colorOptionMenuHistoryLight"/>
            <gradient
                android:startColor="@color/colorOptionMenuHistoryLight"
                android:endColor="@color/colorOptionMenuHistoryLight"
                android:angle="90" />

            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:radius="60dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />


        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colorOptionMenuHistoryLight"/>
            <gradient
                android:startColor="@color/colorOptionMenuHistoryLight"
                android:endColor="@color/colorOptionMenuHistoryLight"
                android:angle="90" />

            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:radius="60dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

        </shape>
    </item>
</selector>