<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantillainicios"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plantillainicios"
        android:visibility="visible">



    </RelativeLayout>

    <include
        android:id="@+id/toolbarHistory"
        layout="@layout/toolbar_menu" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarHistory"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/text_welcome"
        android:textColor="@color/colorQuestionBG"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textWelcome"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/linearGame"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/juegose" />


        <Button
            android:id="@+id/linearHistory"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/historia"
            android:gravity="center_vertical" />


        <Button
            android:id="@+id/linearDiary"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/agenda"
            android:gravity="center_vertical"
            android:orientation="horizontal" />


        <Button
            android:id="@+id/linearVideo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/video"
            android:gravity="center_vertical" />


              >




    </LinearLayout>

</RelativeLayout>