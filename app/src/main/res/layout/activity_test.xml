<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarHistory"
        layout="@layout/toolbar_options"/>


    <RelativeLayout
        android:id="@+id/relativeTimer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbarHistory"
        android:gravity="center_vertical"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:tint="@color/colorOptionMenuHistory"
                android:src="@drawable/ic_diary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/lato_bold"
                android:text="02"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/lato_bold"
                android:text="02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/lato_bold"
                android:text="/"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorOptionMenuHistory"
                android:text="05"/>
        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressTimer"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/relativeTimer"
        android:max="100"
        android:progress="45"
        android:progressDrawable="@drawable/custom_progressbar"
        style="?android:attr/progressBarStyleHorizontal" />


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/progressTimer"
       android:layout_above="@+id/linearComodin"
       android:background="@color/colorQuestionBG">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center_horizontal">

           <androidx.cardview.widget.CardView
               android:layout_width="350dp"
               android:layout_height="120dp"
               android:layout_margin="20dp"
               android:elevation="2dp"
               app:cardCornerRadius="10dp">

               <TextView
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:fontFamily="@font/lato_regular"
                   android:textSize="18sp"
                   android:textColor="@color/colorQuestionText"
                   android:text="¿En qué año se proclamó la Independencia del Perú?"/>

           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="330dp"
               android:layout_height="60dp"
               android:layout_marginTop="30dp"
               android:gravity="center"
               android:background="@drawable/shape_options_answer">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:fontFamily="@font/lato_regular"
                   android:textSize="18sp"
                   android:textColor="@color/colorQuestionText"
                   android:text="1820"/>


           </LinearLayout>

           <LinearLayout
               android:layout_width="330dp"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:background="@drawable/shape_options_answer">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:fontFamily="@font/lato_regular"
                   android:textSize="18sp"
                   android:textColor="@color/colorQuestionText"
                   android:text="1821"/>


           </LinearLayout>

           <LinearLayout
               android:layout_width="330dp"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:background="@drawable/shape_options_answer">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:fontFamily="@font/lato_regular"
                   android:textSize="18sp"
                   android:textColor="@color/colorQuestionText"
                   android:text="1822"/>


           </LinearLayout>

           <LinearLayout
               android:layout_width="330dp"
               android:layout_height="60dp"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:background="@drawable/shape_options_answer">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:fontFamily="@font/lato_regular"
                   android:textSize="18sp"
                   android:textColor="@color/colorQuestionText"
                   android:text="1823"/>


           </LinearLayout>


       </LinearLayout>

   </ScrollView>

    <LinearLayout
        android:id="@+id/linearComodin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/colorIpae">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorAccent"
            android:text="Comodín Zegel IPAE"/>

    </LinearLayout>

</RelativeLayout>